<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/dip_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/dip_28"
        android:layout_height="@dimen/dip_28">
        <ImageView
            android:id="@+id/profileImgViewer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginStart="@dimen/dip_10"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titleViewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#121329"
            android:textSize="@dimen/sp_13"
            android:lines="1"
            />
        <TextView
            android:id="@+id/contentViewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#121329"
            android:textSize="@dimen/sp_12"
            android:minLines="1"
            android:maxLines="2"
            />
    </LinearLayout>
</LinearLayout>
