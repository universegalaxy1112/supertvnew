<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SuperTvDefault" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/kubrick_text_color_light</item>
        <item name="android:windowBackground">@color/bg_general</item>
        <item name="android:progressBarStyle">@style/SuperTvProgressBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="colorPrimary">@color/app_color_accent</item>
        <item name="colorPrimaryDark">@color/bg_general</item>
        <item name="colorAccent">@color/app_color_accent</item>

    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/netflix_red</item>
        <item name="android:textColorPrimary">@color/bg_general</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="CustomAlertDialogStyle" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/netflix_red</item>
        <item name="android:textColorSecondary">@color/netflix_red</item>
        <item name="android:actionMenuTextColor">@color/netflix_red</item>
    </style>

    <style name="text.subtitle">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/dip_8</item>
        <item name="android:layout_marginTop">@dimen/dip_8</item>
    </style>
    <style name="text.castLoadingTitle">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text.episode_title">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="text.tab">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:padding">@dimen/dip_2</item>
    </style>
    <style name="text.episodeName">
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:layout_marginTop">@dimen/dip_8</item>
        <item name="android:textColor">@color/info_orange</item>
    </style>
    <style name="text.more">
        <item name="android:textColor">@color/netflix_red</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:layout_marginLeft">@dimen/dip_2</item>
    </style>
    <style name="text.account">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>
    <style name="text.livetv">
        <item name="android:textColor">@color/live_category_text</item>
        <item name="android:textSize">@dimen/sp_11</item>
    </style>
    <style name="text.livetv_category_program_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_11</item>
    </style>
    <style name="text.additional_info">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:layout_marginRight">@dimen/dip_8</item>
    </style>
    <style name="text.description">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:layout_marginLeft">@dimen/dip_8</item>
    </style>

    <style name="live_channel_epg">
        <item name="android:textColor">@color/barker_secondary_text_color</item>
    </style>

    <style name="no_channel">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textSize">@dimen/sp_10</item>
    </style>

    <style name="text.error_text">
        <item name="android:textColor">@color/loading_error</item>
        <item name="android:layout_marginLeft">@dimen/dip_8</item>
    </style>
    <style name="text.movie_detail_title"  >
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
     </style>
    <style name="SuperTvProgressBar" parent="Theme.AppCompat.Light.NoActionBar">
     </style>

    <style name="Widget.Styled.ActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:icon" >@android:color/transparent</item>
        <item name="android:background">@color/black</item>
        <item name="android:padding">0dp</item>
        <item name="android:displayOptions">none|useLogo|showHome</item>
        <item name="android:actionMenuTextAppearance">@style/Widget.Styled.ActionBarMenuTextStyle
        </item>
    </style>

    <style name="Widget.Styled.ActionBarMenuTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/kubrick_text_color_light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SuperTvDefault.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SuperTvDefault.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SuperTvDefault.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget"/>
    <style name="RedAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#F00</item>
    </style>

    <style name="castoptionButton" >
        <item name="android:paddingTop" >@dimen/dip_4</item>
        <item name="android:paddingBottom">@dimen/dip_4</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingRight">@dimen/dip_6</item>
        <item name="android:paddingLeft">@dimen/dip_6</item>
        <item name="android:background">@drawable/resolution_button</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
    <style name="Theme.CastVideosTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set AppCompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- The rest of your attributes -->
        <item name="castMiniControllerStyle">@style/CustomCastMiniController</item>
        <item name="castIntroOverlayStyle">@style/CustomCastIntroOverlay</item>
        <item name="castExpandedControllerStyle">@style/CustomCastExpandedController</item>
        <item name="castExpandedControllerToolbarStyle">
            @style/ThemeOverlay.AppCompat.Dark.ActionBar
        </item>
    </style>

    <style name="Theme.CastVideosDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="castMiniControllerStyle">@style/CustomCastMiniController</item>
        <item name="castIntroOverlayStyle">@style/CustomCastIntroOverlay</item>
        <item name="castExpandedControllerStyle">@style/CustomCastExpandedController</item>
        <item name="castExpandedControllerToolbarStyle">
            @style/ThemeOverlay.AppCompat.Dark.ActionBar
        </item>
    </style>

    <style name="YellowSeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">
            @drawable/apptheme_scrubber_progress_horizontal_holo_light
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/apptheme_scrubber_progress_horizontal_holo_light
        </item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/apptheme_scrubber_control_selector_holo_light</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="myRecyclerViewStyle">
        <!-- NOTE: clipChildren should be true on API level 10 -->
        <item name="android:clipChildren">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="CustomCastIntroOverlay" parent="CastIntroOverlay">
        <item name="castButtonTextAppearance">@style/TextAppearance.CustomCastIntroOverlay.Button
        </item>
        <item name="castTitleTextAppearance">@style/TextAppearance.CustomCastIntroOverlay.Title
        </item>
    </style>

    <style name="TextAppearance.CustomCastIntroOverlay.Button"
        parent="android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearance.CustomCastIntroOverlay.Title"
        parent="android:style/TextAppearance.Large">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CustomCastMiniController" parent="CastMiniController">
        <item name="castShowImageThumbnail">true</item>
        <item name="castTitleTextAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="castSubtitleTextAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>
    <style name="Theme.Transparent" parent="SuperTvDefault.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="CustomCastExpandedController" parent="CastExpandedController"/>
    <style name="play_text">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:focusable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/dip_16</item>
        <item name="android:paddingEnd">@dimen/dip_16</item>
        <item name="android:paddingTop">@dimen/dip_10</item>
        <item name="android:paddingBottom">@dimen/dip_10</item>
        <item name="android:background">@drawable/play_background_trailer</item>
    </style>

    <style name="ExoMediaButton">
        <item name="android:background">@drawable/exo_player_controller_background</item>
        <item name="android:layout_width">@dimen/exo_media_button_width</item>
        <item name="android:layout_height">@dimen/exo_media_button_height</item>
    </style>

</resources>
