<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="SearchFM"
            type="com.uni.julio.supertvplus.viewmodel.SearchViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/actionbar_bg_color"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </com.google.android.material.appbar.AppBarLayout>
        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40"
            android:imeActionId="@+id/login"
            android:layout_margin="@dimen/dip_20"
            android:backgroundTint="@color/netflix_red"
            android:textColorHint="@color/netflix_red"
            android:inputType="textAutoComplete"
            android:tooltipText="Search"
            tools:ignore="InvalidImeActionId"
            android:imeOptions="actionDone"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.uni.julio.supertvplus.helper.TVRecyclerView
                android:id="@+id/server_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:focusable="false"
                android:gravity="center_vertical"
                app:scrollMode="followScroll"
                app:focusDrawable="@drawable/moviesborder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                android:descendantFocusability="afterDescendants">
            </com.uni.julio.supertvplus.helper.TVRecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>